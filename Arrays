package AssistedPracticeProject;

public class ArraysExample {
	    public static void main(String[] args) {
	        // Creating an integer array and initializing it
	        int[] intArray = {10, 20, 30, 40, 50};

	        // Accessing and printing array elements using a for loop
	        System.out.println("Integer Array:");
	        for (int i = 0; i < intArray.length; i++) {
	            System.out.println("Element " + i + ": " + intArray[i]);
	        }

	        // Sum of array elements
	        int sum = 0;
	        for (int value : intArray) {
	            sum += value;
	        }
	        System.out.println("\nSum of Integer Array: " + sum);

	        // Finding the maximum element
	        int max = intArray[0];
	        for (int i = 1; i < intArray.length; i++) {
	            if (intArray[i] > max) {
	                max = intArray[i];
	            }
	        }
	        System.out.println("Maximum Element in Integer Array: " + max);

	        // Creating a string array
	        String[] stringArray = {"Apple", "Banana", "Cherry", "Date", "Elderberry"};

	        // Accessing and printing string array elements using an enhanced for loop
	        System.out.println("\nString Array:");
	        for (String fruit : stringArray) {
	            System.out.println("Fruit: " + fruit);
	        }

	        // Reversing the string array
	        String[] reversedStringArray = new String[stringArray.length];
	        for (int i = 0; i < stringArray.length; i++) {
	            reversedStringArray[i] = stringArray[stringArray.length - 1 - i];
	        }

	        System.out.println("\nReversed String Array:");
	        for (String fruit : reversedStringArray) {
	            System.out.println("Fruit: " + fruit);
	        }
	    }
	}

